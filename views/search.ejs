<!doctype html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
</head>
<body>
  <%- include('./partials/header')%>
    <div class="carousel slide" id="myCarousel"  data-ride="carousel">
        <div class="carousel-inner mostrar-lg">
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
          </ol>
          <div class="carousel-item active mostrar-lg">
            <a href="#"><img src="images/PIA1.jpg" class="d-block w-100 mostrar-lg" alt="..."></a>
          </div>
          <div class="carousel-item mostrar-lg">
            <a href="#"><img src="images/PIA2.jpg" class="d-block w-100 mostrar-lg" alt="..."></a>
          </div>
          <div class="carousel-item mostrar-lg">
            <a href="#"><img src="images/PIA3.jpg" class="d-block w-100 mostrar-lg" alt="..."></a>
          </div>
        </div>
        <a class="carousel-control-prev mostrar-lg" href="#myCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next mostrar-lg" href="#myCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div class="container">

        <% if(productos[0].dataValues != ''){%>
          <h2>Busquedas relacionadas con:"<%= datoABuscar %>" </h2>
          <div class="row row-cols-1 row-cols-md-4 card-deck">
            <div class="card">
              <img class="card-img-top" src="../Images/productos/<%= productos[0].dataValues.image %>" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title"><%= productos[0].short_description %></h5>
                  <p class="card-text"><%= productos[0].long_description %></p>
                
              </div>
            </div>
            
          </div>
        <% }else{ %>

          <h2>No se encontraron coincidencias de productos:"<%= datoABuscar %>" </h2>
          </br>
          </br>
          </br>
          </br>
          </br>
          </br>

        <% } %>

